WORKFLOW_DEFAULT_ARGS = {
    'email':['email@gmail.com','enamil2@gmail.com'],
    'email_on_failure':True,
    'email_on_retry':True,
    'retries':1,
    'retry_delay':timedelta(minutes=5)

}

dag=DAG(
    dag_id='pampa_main_etl',
    description='Pampa Main ETL DAG',
    schedule_interval=timedelta(days=1),
    start_date=datetime.datetime(2023,11,1),
    catchup=false,
    concurrency=3,
    default_arg=WORKFLOW_DEFAULT_ARGS
)
def greeting():
    import logging
    logging.info('Hola mundo!')

cloudwatch = PythonOperator(
    task_id='extract_cloudwatch_all',
    python_callable=greeting,
    provide_context=True,
    dag=dag
)    
